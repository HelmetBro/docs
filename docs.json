{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Blooio Messaging API",
  "colors": {
    "primary": "#007aff",
    "light": "#00abe9",
    "dark": "#0b5bb3"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "authentication",
              "idempotency"
            ]
          },
          {
            "group": "How-to",
            "pages": [
              "guides/webhooks-local",
              "guides/attachments",
              "guides/contact-flows",
              "guides/error-handling"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Messages",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "POST /v1/api/messages",
              "GET /v1/api/messages/{messageId}",
              "GET /v1/api/messages/{messageId}/status",
              "DELETE /v1/api/messages/{messageId}"
            ]
          },
          {
            "group": "Contacts & Account",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "GET /v1/api/contacts/{contact}/capabilities",
              "GET /v1/api/me"
            ]
          },
          {
            "group": "Configuration",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "PUT /v1/api/config/webhook",
              "GET /v1/api/config/webhook"
            ]
          },
          {
            "group": "Batches",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "POST /v1/api/batches",
              "GET /v1/api/batches/{batchId}",
              "GET /v1/api/batches/{batchId}/status",
              "GET /v1/api/batches/{batchId}/messages"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/events"
            ]
          },
          {
            "group": "Errors",
            "pages": [
              "api-reference/errors"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "api": {
    "mdx": {
      "server": "https://edge.blooio.com",
      "auth": {
        "method": "bearer"
      }
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "defaults": "required"
    }
  }
  
}
